@model Fuse8.TestTask.WebUI.Models.Home.IndexViewModel

@{
    Layout = "~/Views/_Layout.cshtml";
    ViewBag.Title = "Тестовое задание";
}

@if (ViewBag.Error != null)
{
    <p class="alert alert-danger"><strong>Ошибка: </strong>@ViewBag.Error.Message</p>
}

@if (ViewBag.Success == true)
{
    <p class="alert alert-success"><strong>Успех: </strong>Отчет сформирован и отправлен на @Model.To =)</p>
}

<form action="/" method="post">
    <div class="form-group">
        <label for="minDate">Дата заказов с</label>
        <input type="date" class="form-control" name="minDate" id="minDate" value="@Model.MinDate" placeholder="с" required/>
    </div>
    <div class="form-group">
        <label for="maxDate">Дата заказов по</label>
        <input type="date" class="form-control" name="maxDate" id="maxDate" value="@Model.MaxDate" placeholder="по" required/>
    </div>
    <div class="form-group">
        <label for="from">Email отправителя</label>
        <input type="email" class="form-control" name="from" id="from" value="@Model.From" placeholder="Отправитель" required/>
    </div>
    <div class="form-group">
        <label for="to">Email получателя</label>
        <input type="email" class="form-control" name="to" id="to" value="@Model.To" placeholder="Получатель" required/>
    </div>
    <div class="form-group">
        <label for="smtp">Адрес SMTP сервера</label>
        <input type="text" class="form-control" name="smtp" id="smtp" value="@Model.Smtp" placeholder="Адрес SMTP сервера" required />
    </div>
    <div class="form-group">
        <label for="port">Порт SMTP сервера</label>
        <input type="text" class="form-control" name="port" id="port" value="@Model.Port" placeholder="Порт SMTP сервера" required />
    </div>
    <div class="form-group">
        <label for="username">Имя пользователя</label>
        <input type="text" class="form-control" name="username" id="username" value="@Model.UserName" placeholder="Имя пользователя" required />
    </div>
    <div class="form-group">
        <label for="password">Пароль</label>
        <input type="password" class="form-control" name="password" id="password" value="" placeholder="Пароль" required />
    </div>
    <button type="submit" class="btn btn-default">OK</button>
</form>
